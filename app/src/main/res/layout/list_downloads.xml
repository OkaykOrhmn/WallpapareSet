<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8cdp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/selected_image"
                >

                <ImageView
                    android:id="@+id/main_image"
                    android:layout_width="@dimen/_48cdp"
                    android:layout_height="@dimen/_48cdp"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/name_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/main_image"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_12cdp"
                    style="@style/fontForNormalBlack"
                    android:fontFamily="@font/font"
                    android:text="img_number_sample12.png"

                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    />



            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/mainBlack"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>